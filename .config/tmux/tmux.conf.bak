set -g default-terminal "screen-256color"
set -g default-shell /bin/zsh
set -g status on

set -g mode-style "fg=#adbac7,bg=#373e47"

set -g message-style "fg=#adbac7,bg=#373e47"
set -g message-command-style "fg=#adbac7,bg=#373e47"

set -g pane-border-style "fg=#444c56"
set -g pane-active-border-style "fg=#539bf5"

set -g status "on"
set -g status-justify "left"

set -g status-style "fg=#539bf5,bg=#373e47"

set -g status-left-length "100"
set -g status-right-length "100"

set -g status-left-style NONE
set -g status-right-style NONE

set -g status-left "#[fg=#cdd9e5,bg=#373e47,bold]  #[fg=#1e2228,bg=#dcbdfb,bold] #S #[fg=#dcbdfb,bg=#373e47,nobold,nounderscore,noitalics]"
set -g status-right "#[fg=#373e47,bg=#373e47,nobold,nounderscore,noitalics]#[fg=#373e47,bg=#373e47] #{prefix_highlight} #[fg=#539bf5,bg=#373e47,nobold,nounderscore,noitalics]#[fg=#545d68,bg=#539bf5] %Y-%m-%d  %I:%M %p #[fg=#373e47,bg=#539bf5,nobold,nounderscore,noitalics]#[fg=#ffbc6f,bg=#373e47,nobold,nounderscore,noitalics]#[fg=#1e2228,bg=#ffbc6f,bold] #(whoami) "

setw -g window-status-activity-style "underscore,fg=#adbac7,bg=#373e47"
setw -g window-status-separator ""
setw -g window-status-style "NONE,fg=#22272e,bg=#373e47"
setw -g window-status-format "#[fg=#373e47,bg=#ff938a,nobold,nounderscore,noitalics]#[fg=#636e7b,bg=#ff938a,nobold,nounderscore,noitalics] #I  #W #F #[fg=#ff938a,bg=#373e47,nobold,nounderscore,noitalics]"
setw -g window-status-current-format "#[fg=#373e47,bg=#57ab5a,nobold,nounderscore,noitalics]#[fg=#636e7b,bg=#57ab5a,bold] #I  #W #F #[fg=#57ab5a,bg=#373e47,nobold,nounderscore,noitalics]"
